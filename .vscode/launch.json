    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python AOC Debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "aoc/runner.py",
            "args": ["${file}"],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "env": {"PYTHONPATH": "${workspaceRoot}/common"}
        }
    ]
}